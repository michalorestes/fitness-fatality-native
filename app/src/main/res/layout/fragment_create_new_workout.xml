<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.screens.myWorkouts.createNewWorkout.CreateNewWorkoutFragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_margin="10dp"
        android:id="@+id/linearLayout4">
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:hint="Workout Name" tools:layout_conversion_absoluteHeight="62dp"
            tools:layout_conversion_absoluteWidth="392dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textInputLayout">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/txt_workout_name"
                tools:layout_conversion_absoluteHeight="56dp" tools:layout_editor_absoluteY="6dp"
                tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="392dp"/>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:text="Save Workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_save_workout"
            tools:layout_conversion_absoluteHeight="640dp"
            tools:layout_conversion_absoluteWidth="392dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="254dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radio_group"/>
    <RadioGroup
            android:layout_width="381dp"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/radio_group">
        <RadioButton
                android:text="Image A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radio_image_a" android:layout_weight="1"/>
        <RadioButton
                android:text="Image B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radio_image_b" android:layout_weight="1"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>