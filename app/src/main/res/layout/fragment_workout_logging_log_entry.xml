<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_sets_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:width="40dp"
        android:text="1"
        android:textAlignment="center" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/edit_text_reps_number"
        style="@style/AppTheme.plainEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:width="70dp"
        android:ems="10"
        android:hint="12"
        android:inputType="numberSigned"
        android:maxLength="2"
        android:textAlignment="center" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/edit_text_weight_lifed"
        style="@style/AppTheme.plainEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:width="80dp"
        android:ems="10"
        android:hint="12.1"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:textAlignment="center" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.example.fitnessfatality.ui.customViews.customBottomAppBar.StatusIndicator
        android:id="@+id/statusIndicator"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_gravity="center" />
</LinearLayout>